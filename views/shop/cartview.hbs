<div class="container">
{{# if products}}
    <div class="row">
        <div class="col-sm-6 col-md-6">
            <ul class="list-group">
                {{#each products}}
                    <li class='list-group-item'>
                        <span class="badge">{{this.qty}}</span>
                        <strong>{{this.item.ten_mon}}</strong>
                        <span class="lable label-success">{{this.don_gia}} đ</span>
                        <div class="btn-group">
                            {{!-- <button type="button" class="btn btn-primary btn-xs dropdown-toggle" data-toggle='dropdown'> Click <span class="caret"></span>  </button> --}}
                                <ul class="dropdown-menu">
                                    {{!-- <li><a href=""> reduce 1</a></li> --}}
                                    {{!-- <li><a href=""> remove all 1</a></li> --}}
                                </ul>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
         <div class="row" >
            <div class="col-sm-6 col-md-6">
                <strong>Tổng tiền: {{totalPrice}} đ</strong>
            </div>
            <hr>
             <div  class="col-sm-6 col-md-6">
                <a href="/checkout" type="button" class="btn btn-success">Thanh toán</a>
            </div>
        </div>
        
</div>  
       
{{else}}
    <h1> Giỏ hàng trống !</h1>
    <h2>  <a href="/">Mua hàng ngay</a></h2>
{{/if}}

</div>