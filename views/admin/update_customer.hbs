<div class="wthree_general graph-form agile_info_shadow ">
    <h3 class="w3_inner_tittle two" style="text-align: center;">Cập nhật thông tin khách hàng </h3>

    <div class="grid-1 ">
        <div class="form-body">
            <form class="form-horizontal alert-success" method="post" >
                {{#with result}}
                 <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Mã</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" name="ma"readonly="true" value="{{this.ma_khach_hang}}">
                    </div>
                </div>
                 <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Tên</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" readonly="true" name="ten" value="{{this.ten_khach_hang}}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Tên đăng nhập</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" readonly="true" name="tendn" value="{{this.userName}}">
                    </div>
                </div>
                 <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Mật khẩu</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" readonly="true" name="mk" value="{{this.passWord}}">
                    </div>
                </div>
                 <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" readonly="true" name="email" value="{{this.email}}">
                    </div>
                </div>
                 <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Điện thoại</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" readonly="true" name="dt" value="{{this.dienthoai}}">
                    </div>
                </div>
                 <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Ghi chú</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" readonly="true" name="ghichu" value="{{this.ghi_chu}}">
                    </div>
                </div>
                 <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Địa chỉ</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" readonly="true" name="diaChi" value="{{this.diachi}}">
                    </div>
                </div>
               
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Trạng thái</label>
                    <div class="col-sm-8">
                       
                        <input type="radio" name="trangThai" value="Thành viên" {{{setChecked this.trangThai 'Thành viên'}}}>Thành viên
                        <input type="radio" name="trangThai" value="VIP" {{{setChecked this.trangThai 'VIP'}}}>VIP
                    </div>
                </div>
                {{/with}}
                <input name="_csrf" type="hidden" value="{{csrfToken}}">
                <div class="row">
                 <div class="text-center">
                <button class="alert alert-success">Cập nhật</button>
                <a href="/admin/list_customer"class="alert alert-warming">Trở về</a>
                </div>
            </div>
            </form>
            
        </div>

    </div>
</div>