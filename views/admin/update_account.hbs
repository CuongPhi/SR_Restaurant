<div class="wthree_general graph-form agile_info_shadow ">
    <h3 class="w3_inner_tittle two" style="text-align: center;">Cập nhật tài khoản </h3>

    <div class="grid-1 ">
        <div class="form-body">
            <form class="form-horizontal" method="post">
                {{#with result}}
                 <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Mã</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" name="ma"readonly="true" value="{{this.ma}}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Tên đăng nhập</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control1" id="focusedinput" readonly="true" name="ten" value="{{this._user}}">
                    </div>
                </div>
               <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Loại tài khoản</label>
                    <div class="col-sm-8">
                        <select name="loaitk" >
                            <option value="2" {{{select this.loaiTK '2'}}}>Nhân viên</option>
                            <option value="1" {{{select this.loaiTK '1'}}}>Quản lí</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Trạng thái</label>
                    <div class="col-sm-8">
                       
                        <input type="radio" name="trangThai" value="1" {{{setChecked this.trangThai '1'}}}>Block
                        <input type="radio" name="trangThai" value="2" {{{setChecked this.trangThai '2'}}}>Unblock
                    </div>
                </div>
                {{/with}}
                <input name="_csrf" type="hidden" value="{{csrfToken}}">
                <div class="row">
                 <div class="text-center">
                <button class="btn btn-info btn-lg"><span class="glyphicon glyphicon-pencil"></span>Cập 
                nhật</button>
                <a href="/admin/list_account"class="alert alert-warming">Hủy</a>
                </div>
            </div>
            </form>
            
        </div>

    </div>
</div>